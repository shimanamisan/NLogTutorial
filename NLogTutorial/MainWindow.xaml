<Window x:Class="NLogTutorial.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:NLogTutorial"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="450">
    <Grid>
        <StackPanel Margin="30">
            <StackPanel Orientation="Horizontal"
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center"
                        >
                <Button Margin="8" Content="ログ出力ループ開始" Height="40" Width="110" Click="Log_Output"/>
                <Button Margin="8" Content="エラー出力ループ開始" Height="40" Width="110" Click="Log_Exception"/>
                <Button Margin="8" Content="ループ処理を停止" Height="40" Width="110" Click="Log_Rotation"/>
            </StackPanel>

            <StackPanel Orientation="Horizontal"
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center"
                        >
                <!--<Button Margin="8" Content="Button" Height="40" Width="110"/>
                <Button Margin="8" Content="Button" Height="40" Width="110"/>
                <Button Margin="8" Content="Button" Height="40" Width="110"/>-->
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>
